<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Battleship Login</title>

    <!-- Latest compiled and minified CSS & JS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <link rel="stylesheet" href="css/login.css">
    <script src="js/jquery.js"></script>
    <script src="js/login.js"></script>
</head>

<body>
    <h1><b>BATTLE</b>SHIP</h1>

    <section id="main">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    <div class="panel panel-log">
                        <div class="panel-heading">
                            <h4>Đăng Nhập</h4>
                        </div>
                        <div class="panel-body">
                            <form id="form-login" action='' method="POST" role="form">
                                <div class="form-group">
                                    <label for="Tên Đăng Nhập">Tên Đăng Nhập</label>
                                    <input type="text" class="form-control" name="username" id="username" placeholder="Nhập tên đăng nhập">
                                </div>

                                <div class="form-group">
                                    <label for="Mật Khẩu">Mật Khẩu</label>
                                    <input type="password" class="form-control" name="password" id="password"
                                        placeholder="Nhập mật khẩu">
                                </div>

                                <div class="row">
                                    <div class="col-md-6">
                                        <button id="submit" type="button" class="btn btn-black btn-block">Đăng Nhập</button>
                                    </div>
                                    <div class="col-md-6">
                                        <button id="register" type="button" class="btn btn-black btn-block">Đăng Kí</button>
                                    </div>
                                </div>
                                <div id="errors"></div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>

</html>