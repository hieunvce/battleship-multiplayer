<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Battleship Room</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" media="screen" href="css/room.css" />
    <script src="/socket.io/socket.io.js"></script>
    <script src="js/jquery.js"></script>
    <script src="js/room.js"></script>
</head>

<body>
    <div id="playerInfo">
        <div id="player">WELCOME <strong><span id="playername"></span></strong></div>
        <input type="button" class="btn" id="logout" value="LOGOUT" />
    </div>

    <div id="setDevice">
        <div id="availableDevice">
            <div id="deviceInfo">
                <div>Available Devices</div>
                <div>Choose your device</div>
            </div>
            <br>
            <div id="deviceList">
            </div>
        </div>
    </div>

    <div id="setRoom">
        <div id="newRoom">
            <input type="text" id="newRoomName" placeholder="Enter new room name..." />
            <input type="button" class="btn" id="btnCreateNewRoom" value="Create New Room" />
        </div>
        <div id="availableRoom">
            <div id="info">
                <div>Available rooms</div>
                <div>Choose one room to join and fight</div>
            </div>
            <br>
            <div id="roomList">
            </div>
        </div>
    </div>

    <div id="setMap">Setmap</div>

    <div id="playGame">
        <div id="timer">60</div>
        <div id="gameField">
            <div id="player">
                <div id="playerStatus" class="status">
                    Player
                </div>
                <div>
                    <table id="playerMap">
                    </table>
                </div>
            </div>

            <div id="opponent">
                <div id="opponentStatus" class="status">
                    Opponent
                </div>
                <div>
                    <table id="opponentMap">
                    </table>
                </div>
            </div>
        </div>
    </div>

</body>

</html>