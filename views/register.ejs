<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Register</title>

    <!-- Latest compiled and minified CSS & JS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <link rel="stylesheet" href="css/login.css">
    <script src="js/jquery.js"></script>
    <script src="js/register.js"></script>
</head>

<body>
    <div id="box">
        <h1> Battleship</h1>
    </div>
    <section id="main">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-md-offset-3">
                    <div class="panel panel-log">
                        <div class="panel-heading">
                            <h4>Đăng Kí</h4>
                        </div>
                        <div class="panel-body">
                            <form id="form-register">
                                <div class="form-group">
                                    <label for="Tên Đăng Nhập">Tên Đăng Nhập</label>
                                    <input type="text" class="form-control" id="usernameRegister" placeholder="Nhập tên đăng nhập">
                                </div>

                                <div class="form-group">
                                    <label for="Mật Khẩu">Mật Khẩu</label>
                                    <input type="password" class="form-control" id="passwordRegister1" placeholder="Nhập mật khẩu">
                                </div>

                                <div class="form-group">
                                    <label for="Nhập Lại Mật Khẩu">Nhập Lại Mật Khẩu</label>
                                    <input type="password" class="form-control" id="passwordRegister2" placeholder="Nhập mật khẩu">
                                </div>

                                <div class="row">
                                    <div class="col-md-12">
                                        <button id="register" type="button" class="btn btn-black btn-block">Đăng Kí</button>
                                    </div>
                                </div>
                                <div id="errors"></div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>

</html>